<% layout('layouts/boilerplate') %> 


    <div class="row">
        <h1 class="text-center"> Edit Artist</h1>
        <div class="col-6 offset-3">
    
            <form action="/artists/<%= artist._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data"> <!--enctype="multipart/form-data" For Images -->
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>      
                    <input class="form-control" type="text" id="name" name="artist[name]" value="<%= artist.name %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>      
                    <textarea class="form-control" type="text" id="description" name="artist[description]" required><%= artist.description %></textarea>
                </div>
                <input type="file" name="image" id="">
                <div class="mb-3">
                    <button class="btn btn-info">Update Artist</button>
                </div>
                
            </form>
            <a href="/artists/<%= artist._id %>">Back to Artist</a>
        </div>
    </div>



    
