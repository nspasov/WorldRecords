
    <% layout('layouts/boilerplate') %> 


    <h1>All Artists</h1>
    <div><a href="/artists/new">Add Artist</a></div>


        <% for (let artist of artists) {%> 
            <div class="card mb-3">
                <div class="row">
                 <div class="col-md-4">
                    <% if(artist.photo){ %>      
                        <img class="img-fluid" src="<%= artist.photo %>">
                    <% } %> 
                </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= artist.name%></h5>
                            <p class="card-text"><%= artist.description %></p>
                            <!-- <p class="card-text">
                                <small class="text-muted"><%= %></small>
                            </p> -->
                            <a class="btn btn-primary" href="/artists/<%= artist._id %>">View <%= artist.name %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %> 

