<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center"> New Artist</h1>
    <div class="col-6 offset-3">

        <form action="/artists" method="POST" novalidate class="validated-form" enctype="multipart/form-data"> <!---->
            
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>      
                <input class="form-control" type="text" id="name" name="artist[name]" required>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>      
                <textarea class="form-control" type="text" id="description" name="artist[description]" required></textarea>
            </div>
            
            <div class="mb-3">
                <label for="artist-photo" class="form-label"></label>
                <input type="file" name="image" id="artist-photo">
            </div>
             
            <div class="mb-3">
                <button class="btn btn-success">Add Artist</button>
            </div>
            
        </form>
        <a href="/artists">All artists</a>
    </div>
</div>


