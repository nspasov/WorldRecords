<% layout('layouts/boilerplate') %>


<div class="row">
    <div class="col-4">
        <div class="card mb-3">

            <div class="card-body">
              <img class="card-img-top" src="<%= user.avatar %>"> 
              <h1 class="card-title"><%= user.username %></h1>
               <p class="card-text"><%= user.bio %></p>
            </div>
        </div>
    </div>
</div>

<% if(( loggedUserRole && loggedUserRole.roleType === 'super admin') || (currentUser && currentUser._id.equals(user._id))){ %>
    <a href="/users/<%= user._id%>/edit"><p>Edit Button</p></a>
  <% } %>  