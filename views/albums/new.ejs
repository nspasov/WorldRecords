<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center"> New Album</h1>
    <div class="col-6 offset-3">

        <form action="/albums" method="POST" novalidate class="validated-form" enctype="multipart/form-data"> <!---->
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>      
                <input class="form-control" type="text" id="name" name="album[name]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Artist</label>      
                <select class="form-control" type="text" id="name" name="album[artist]" required>
                <% for(let artist of artists){ %> 
                    <option value="<%=artist._id%>"><%=artist.name%></option>
                    <% } %> 
                </select>    
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Genre</label>      
                <select class="form-control" type="text" id="name" name="album[genre]" required>
                    <% for(let genre of genres){ %> 
                        <option value="<%=genre%>"><%=genre%></option>
                        <% } %> 
                    </select>  
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="name">Release Year</label>      
                <input class="form-control" type="number" id="name" name="album[releaseYear]" required>
            </div>
            <input type="file" name="image" id="" required> 


            <div class="mb-3">
                <button class="btn btn-success">Add Album</button>
            </div>
            
        </form>
        <a href="/albums">All albums</a>
    </div>
</div>


